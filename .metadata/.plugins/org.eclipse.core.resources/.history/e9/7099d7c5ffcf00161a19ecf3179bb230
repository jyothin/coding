package flatten114;

public class Solution {
    public void flatten(TreeNode root) {
    	while (root != null) {
    		if (root.left != null && root.right != null) {
    			TreeNode t = root.left;
    			while (t.right != null) {
    				t = t.right;
    			}
    			t.right = root.right;
    		}
    		if (root.left != null) {
    			root.right = root.left;
    			root.left = null;
    			root = root.right;
    		}
    	}
    }
    
    public class TreeNode {
    	int val;
    	TreeNode left;
    	TreeNode right;
    	TreeNode(int x) { val = x; }
    }
}
