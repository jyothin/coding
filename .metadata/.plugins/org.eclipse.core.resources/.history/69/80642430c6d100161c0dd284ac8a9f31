package p238_productexceptself;

public class Solution {
    public int[] productExceptSelf(int[] nums) {
        int[] output = new int[nums.length];
        product(nums, output, 0);
        return output;
    }
    
    public void product(int[] nums, int[] output, int index) {
    	
    	if (index > 0) {
    		output[index] = output[index-1] * nums[index-1];
    	} else {
    		output[index] = nums[index];
    	}
    	
    	for (int i=0; i<index; i++) {
    		output[i] = output[i] * nums[index];
    	}
    	
    	if (++index < nums.length) {
    		product(nums, output, index);
    	} else {
    		return;
    	}
    }
}
